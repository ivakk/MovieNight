@page 
@model YouMayLikeModel
@{
    @if (Model.LoggedInUser != null)
    {
        Layout = "_LayoutLoggedIn";
    }
    ViewData["Title"] = "Results";
}

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/SearchResults.css">
</head>
<body>
    <div class="tashak container mt-4">
        <h2 class="textborderstyle text-white mb-3">Movies you may like</h2>
        @if (Model.MovieResults != null && Model.MovieResults.Any())
        {
            <div class="scrolling-wrapper">
                @foreach (var movie in Model.MovieResults)
                {
                    @if(!Model.IsRated(movie.Id))
                    {
                        <div class="card-wrapper">
                            <a href="/Movies/@movie.Id" class="card-link">
                                <div class="card">
                                    <img src="@movie.ImageLink" class="card-img-top" alt="@movie.Title">
                                    <div class="card-body">
                                        <h5 class="card-title">@movie.Title</h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                    
                }
            </div>
        }
        else
        {
            <div class="scrolling-wrapper">
                @foreach (var movie in Model.MovieAlt)
                {
                    @if (!Model.IsRated(movie.Id))
                    {
                        <div class="card-wrapper">
                            <a href="/Movies/@movie.Id" class="card-link">
                                <div class="card">
                                    <img src="@movie.ImageLink" class="card-img-top" alt="@movie.Title">
                                    <div class="card-body">
                                        <h5 class="card-title">@movie.Title</h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                }
            </div>
        }
    </div>
    <div class="tashak container mt-4">
        <h2 class="textborderstyle text-white mb-3">Series you may like</h2>
        @if (Model.SeriesResults != null && Model.SeriesResults.Any())
        {
            <div class="scrolling-wrapper">
                @foreach (var series in Model.SeriesResults)
                {
                    @if (!Model.IsRated(series.Id))
                    {
                        <div class="card-wrapper">
                            <a href="/Series/@series.Id" class="card-link">
                                <div class="card">
                                    <img src="@series.ImageLink" class="card-img-top" alt="@series.Title">
                                    <div class="card-body">
                                        <h5 class="card-title">@series.Title</h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                }
            </div>
        }
        else
        {
            <div class="scrolling-wrapper">
                @foreach (var series in Model.SeriesAlt)
                {
                    @if (!Model.IsRated(series.Id))
                    {
                        <div class="card-wrapper">
                            <a href="/Series/@series.Id" class="card-link">
                                <div class="card">
                                    <img src="@series.ImageLink" class="card-img-top" alt="@series.Title">
                                    <div class="card-body">
                                        <h5 class="card-title">@series.Title</h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                }
            </div>
        }
    </div>
</body>
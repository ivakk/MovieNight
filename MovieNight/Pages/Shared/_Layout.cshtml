<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieNight</title>
    <link rel="icon" href="~/icon.ico" type="image/x-icon">
    <link rel="shortcut icon" type="image/x-icon" href="~/icon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: rgb(117, 54, 112);">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">MovieNight</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item account-link">
                            <a class="nav-link" asp-area="" asp-page="/Catalogues/Movies">Movies</a>
                        </li>
                        <li class="nav-item account-link">
                            <a class="nav-link" asp-area="" asp-page="/Catalogues/Series">Series</a>
                        </li>
                        <li class="nav-item account-link">
                            <a class="nav-link" asp-area="" asp-page="/Account/Login">Login/Sign Up</a>
                        </li>
                    </ul>
                    <!-- Search form -->
                    <form class="form-inline ml-auto" method="get" asp-page="/SearchResults">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search">
                        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="background-color: #202020; color: #fff;">
        <div class="container text-center">
            &copy; 2023 - MovieNight - <a asp-area="" asp-page="/Privacy" style="color: #aaa;">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
